doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/categories_edit.css")
  body
    header
      h1 Edit Category
      a.btn-back(href="/categories/view") Back to Categories

    div.form-container
      form(action=`/categories/edit/${category._id}` method="POST")
        div.form-group
          label(for="name") Name:
          input(type="text" name="name" value=category.name placeholder="Enter category name" required)
        div.form-group
          label(for="description") Description:
          textarea(name="description" placeholder="Enter category description")= category.description
        div.form-actions
          button.btn-submit(type="submit") Save Changes